<?xml version="1.0" encoding="UTF-8"?>
<panel size="270,150" title="Log in"
	plaf="com.sun.java.swing.plaf.windows.WindowsLookAndFeel">

	<panel constraints="BorderLayout.CENTER" Layout="GridBagLayout">
		<label labelfor="user" font="Georgia-BOLD-12" foreground="blue"
			text="Usuário:" HorizontalAlignment="CENTER">
			<gridbagconstraints gridx="0" gridy="0" />
		</label>
		<textfield id="userText" columns="20">
			<gridbagconstraints gridx="1" gridy="0" />
		</textfield>

		<label labelfor="pass" font="Georgia-BOLD-12" foreground="blue"
			text="Senha:" HorizontalAlignment="CENTER">
			<gridbagconstraints gridx="0" gridy="1" />
		</label>
		<passwordfield id="passText" columns="20">
			<gridbagconstraints gridx="1" gridy="1" />
		</passwordfield>
	</panel>

	<panel constraints="BorderLayout.SOUTH" layout="GridBagLayout">
		<button text="Entrar" action="logIn">
			<gridbagconstraints gridx="0" gridy="0" />
		</button>
		<menuitem text="Nao é cadastrado?" foreground="blue" action="newUser">
			<gridbagconstraints gridx="0" gridy="2" />
		</menuitem>
	</panel>
</panel>