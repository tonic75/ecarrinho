<?xml version="1.0" encoding="UTF-8"?>
<panel>
	<formlayout colspecs="f:300px:g" rowspecs="f:30px:g, 5px, f:30px, 5px" />

	<scrollpane id="productsContainer">
		<cellconstraints gridX="1" gridY="1" />
	</scrollpane>

	<panel>
		<formlayout colspecs="f:30px:g, c:90px, f:80px, 10px"
			rowspecs="f:30px" />
		<cellconstraints gridX="1" gridY="3" />

		<label text="Valor total:">
			<cellconstraints gridX="2" gridY="1" />
		</label>
		<textfield id="totalValue" editable="false" background="255,255,255">
			<cellconstraints gridX="3" gridY="1" />
		</textfield>
	</panel>

</panel>